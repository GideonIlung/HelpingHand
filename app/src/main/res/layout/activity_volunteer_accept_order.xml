<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Orders"
        android:id="@+id/AO"
        android:gravity="center"
        android:textSize="28dp"
        android:background="@drawable/gradient"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:textColor="@color/white"/>

    <ListView
        android:id="@+id/patlist"
        android:layout_width="401dp"
        android:layout_height="698dp"
        android:layout_below="@id/AO"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textAlignment="center">

    </ListView>

    <androidx.cardview.widget.CardView
        android:id="@+id/AcceptOrderMessagesCard"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardCornerRadius="12dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        app:cardElevation="5dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/messages_image"
            android:src="@drawable/ic_home_messages_icon" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/SendOrder"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardCornerRadius="12dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        app:cardElevation="5dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/messages_image"
            android:src="@drawable/ic_send_icon" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>